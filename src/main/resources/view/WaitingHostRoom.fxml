<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="900.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.GameController">
   <children>
      <Label layoutX="462.0" layoutY="78.0" text="Waiting for players...">
         <font>
            <Font name="System Bold Italic" size="48.0" />
         </font>
         <textFill>
            <RadialGradient centerX="0.5773480662983426" centerY="0.8459715639810427" radius="0.5">
               <stops>
                  <Stop>
                     <color>
                        <Color />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </RadialGradient>
         </textFill>
      </Label>
      <Button fx:id="startGame" layoutX="600.0" layoutY="359.0" mnemonicParsing="false" onAction="#start" styleClass="Button" text="Start Game" visible="false" />
      <Button layoutX="600.0" layoutY="433.0" mnemonicParsing="false" onAction="#exit" styleClass="Button" text="Close Game" />
      <Label layoutX="523.0" layoutY="181.0" text="Players : " textFill="WHITE">
         <font>
            <Font name="System Bold Italic" size="24.0" />
         </font>
      </Label>
      <Label fx:id="firstPlayerName" layoutX="669.0" layoutY="185.0" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="secondPlayerName" layoutX="669.0" layoutY="210.0" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="thirdPlayerName" layoutX="669.0" layoutY="238.0" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="fourthPlayerName" layoutX="669.0" layoutY="264.0" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
   <stylesheets>
      <URL value="@WaitingHostRoom.css" />
   </stylesheets>
</AnchorPane>
